generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
}

enum Role {
  SUPER_ADMIN
  GALLERY_ADMIN
  CONTACTS_ADMIN
  MODULAR_CENTERS_ADMIN
}

model Product {
  id          String         @id @default(cuid())
  slug        String         @unique
  title       String
  description String?
  images      String[]       @default([])
  order       Int            @default(0)
  isActive    Boolean        @default(true)
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
}

enum Status {
  NEW
  REVIEWING
  CONTACTED
  RESPONDED
  SENT
  CONFIRMED
  COMPLETED
  CANCELLED
  CLOSED
}

enum RequestType {
  CONCEPT_PACK
  TITANIUM_PACK
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  role      Role     @default(GALLERY_ADMIN)
  isActive  Boolean  @default(true)
  lastLogin DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model GalleryGroup {
  id          String   @id @default(cuid())
  title       String
  description String?
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  images      Gallery[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Gallery {
  id          String        @id @default(cuid())
  imageUrl    String
  caption     String?
  description String?
  order       Int           @default(0)
  isActive    Boolean       @default(true)
  groupId     String?
  group       GalleryGroup? @relation(fields: [groupId], references: [id], onDelete: Cascade)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}

model Mandate {
  id           String   @id @default(cuid())
  audienceType String
  name         String
  email        String
  phone        String
  organization String
  message      String
  briefFileUrl String?
  status       Status   @default(NEW)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Request {
  id        String      @id @default(cuid())
  type      RequestType
  name      String
  email     String
  phone     String
  company   String
  message   String?
  status    Status      @default(NEW)
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
}

model Booking {
  id            String   @id @default(cuid())
  name          String
  email         String
  phone         String
  organization  String
  audienceType  String
  preferredDate DateTime
  preferredTime String
  message       String?
  status        Status   @default(NEW)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Contact {
  id           String   @id @default(cuid())
  audienceType String
  name         String
  email        String
  phone        String
  organization String?
  message      String
  briefFileUrl String?
  status       Status   @default(NEW)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

enum NotificationType {
  CONTACT
  BOOKING
  REQUEST
  MANDATE
  SYSTEM
}

model Notification {
  id        String           @id @default(cuid())
  type      NotificationType
  title     String
  message   String
  link      String?
  isRead    Boolean          @default(false)
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt
}

enum CenterImageType {
  MACHINE
  TRAINING
}

model ModularCenter {
  id          String        @id @default(cuid())
  title       String
  location    String?
  description String?
  order       Int           @default(0)
  isActive    Boolean       @default(true)
  images      CenterImage[]
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}

model CenterImage {
  id        String          @id @default(cuid())
  imageUrl  String
  caption   String?
  type      CenterImageType @default(MACHINE)
  order     Int             @default(0)
  isActive  Boolean         @default(true)
  centerId  String
  center    ModularCenter   @relation(fields: [centerId], references: [id], onDelete: Cascade)
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
}
